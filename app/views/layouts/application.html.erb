<!DOCTYPE html>
<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, class: name %>
<% end %>
<html>
  <head>
    <meta charset="utf-8">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">

    <title>FoodRoulette</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= favicon_link_tag asset_path('logo.png') %>
  </head>

  <body>
    <% if (controller_name == 'home' || controller_name == 'login') && current_user.nil? %>
      <section class="home-logo">
        <%= image_tag('logo.png', class: "home-logo-1", alt: "Roulette Logo") %>
        <%= image_tag('logo-3.png', class: "home-logo-2", alt: "Roulette Logo 2") %>
      </section>
    <% elsif controller_name == "home" && !current_user.nil? %>
      <%= render 'partials/nav' %>
      <%= image_tag('logo.png', class: "home-logo-1", alt: "Roulette Logo") %>
      <%= image_tag('logo-3.png', class: "home-logo-2", alt: "Roulette Logo 2") %>
    <% else %>
      <%= render 'partials/nav' %>
    <% end %>

    <%= yield %>
  </body>

</html>
