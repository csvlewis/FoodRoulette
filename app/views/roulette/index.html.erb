<%= content_tag :div,
    class: "temp_information",
    data: {
           restaurant_id_1: restaurants.first.database_id,
           restaurant_id_2: restaurants.second.database_id,
           restaurant_id_3: restaurants.third.database_id,
           user_manual_location: cookies['manual_location'],
           user_latlong: cookies['lat_long']
          } do %>
<% end %>

<!-- <body style='border:0; margin: 0'>
